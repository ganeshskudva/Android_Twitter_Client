<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.apps.basictwitter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_twitter"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Tweets.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="com.codepath.apps.basictwitter.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cpbasicTweets"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codepath.apps.basictwitter.TwitterTimelineActivity"
            android:label="@string/timeline_activity_label" >
        </activity>
        <activity
            android:name="com.codepath.apps.basictwitter.TweetActivity"
            android:label=""
            android:parentActivityName="com.codepath.apps.basictwitter.TwitterTimelineActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codepath.apps.basictwitter.TwitterTimelineActivity" />
        </activity>
        <activity
            android:name="com.codepath.apps.basictwitter.TweetDetailsActivity"
            android:label="@string/title_activity_tweet_details"
            android:parentActivityName="com.codepath.apps.basictwitter.TwitterTimelineActivity" >
        </activity>
        <activity
            android:name="com.codepath.apps.basictwitter.ProfileActivity"
            android:parentActivityName="com.codepath.apps.basictwitter.TwitterTimelineActivity" >
        </activity>
    </application>

</manifest>
